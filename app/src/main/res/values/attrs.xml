<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PrimaryInputView">
        <attr name="piv_inputType" format="string"/>
        <attr name="piv_title" format="string"/>
        <attr name="piv_hint" format="string"/>
        <attr name="piv_guide" format="string"/>
        <attr name="piv_subTitle" format="string"/>
        <attr name="piv_style" format="string"/>
        <attr name="piv_is_area" format="boolean"/>
        <attr name="piv_is_title_all_cap" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PrimaryButton">
        <attr name="pb_text" format="string"/>
        <attr name="pb_style" format="string"/>
        <attr name="pb_leftDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BarcodeScannerView">
        <attr name="shouldScaleToFill" format="boolean"/>
        <attr name="laserEnabled" format="boolean"/>
        <attr name="laserColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderLength" format="dimension"/>
        <attr name="roundedCorner" format="boolean"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="squaredFinder" format="boolean"/>
        <attr name="borderAlpha" format="float"/>
        <attr name="finderOffset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CodeScannerView">
        <attr format="color" name="maskColor"/>
        <attr format="color" name="frameColor"/>
        <attr format="color" name="autoFocusButtonColor"/>
        <attr format="color" name="flashButtonColor"/>
        <attr format="boolean" name="autoFocusButtonVisible"/>
        <attr format="boolean" name="flashButtonVisible"/>
        <attr format="dimension" name="frameThickness"/>
        <attr format="dimension" name="frameCornersSize"/>
        <attr format="dimension" name="frameCornersRadius"/>
        <attr format="float" name="frameAspectRatioWidth"/>
        <attr format="float" name="frameAspectRatioHeight"/>
        <attr format="float" name="frameSize"/>
    </declare-styleable>

    <declare-styleable name="SecondaryInputView">
        <attr format="string" name="siv_inputType"/>
        <attr format="string" name="siv_title"/>
        <attr format="string" name="siv_hint"/>
        <attr format="string" name="siv_guide"/>
        <attr format="string" name="siv_subTitle"/>
        <attr format="string" name="siv_style"/>
        <attr format="boolean" name="siv_is_area"/>
        <attr name="siv_is_title_all_cap" format="boolean"/>
    </declare-styleable>
</resources>